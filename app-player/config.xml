<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.ircam.cosima" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BLT_Tester</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="cosima.ircam@gmail.com" href="http://cosima.ircam.fr/">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="BackupWebStorage" value="none" />
    <preference name="com.unarin.cordova.beacon.android.altbeacon.ForegroundBetweenScanPeriod" value="1000" />
    <preference name="com.unarin.cordova.beacon.android.altbeacon.ForegroundScanPeriod" value="1000" />
    <splash src="assets/cosima-spashscreen-black.jpg" />
    <platform name="ios">
        <icon height="120" src="assets/Icon-60@2x.png" width="120" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="com.unarin.cordova.beacon" spec="https://github.com/petermetz/cordova-plugin-ibeacon.git" />
</widget>
